<tr>
  <td><div id = "route-name_<%= route.id %>">
    <%= route.name %></div>
    <%= render 'form', route: route, hidden: true %>
  </td>
  <td><%= link_to t('common.show'), [:admin, route] %></td>
  <td><%= link_to t('common.edit'), '', class: 'edit-route', data: { route_id: route.id} %></td>
  <td><%= link_to t('common.delete'), [:admin, route], method: :delete, data: { confirm: 'Вы уверены, что хотите удалить?' } %></td>
</tr>

