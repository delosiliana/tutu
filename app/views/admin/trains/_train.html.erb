<tr>
  <td><div id="train_number_<%=train.id %>">
    <%= train.number %></div>
    <%= render 'form', train: train, hidden: true %>
  </td>
  <td><%= link_to t('common.show'), [:admin, train] %></td>
  <td><%= link_to t('common.edit'), '', class: 'edit-train', data: { train_id: train.id } %></td>
  <td><%= link_to t('common.delete'), [:admin, train], method: :delete, data: { confirm: 'Вы уверены, что хотите удалить?' } %></td>
</tr>
